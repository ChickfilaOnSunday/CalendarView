<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sickmartian.calendarview.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.sickmartian.calendarview.CalendarView
        xmlns:calendar_view="http://schemas.android.com/apk/res/com.sickmartian.calendarview"
        calendar_view:currentDayDecorationDrawable="@drawable/current_day_drawable"
        app:currentDayDecorationPadding="8dp"
        app:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"/>

</RelativeLayout>
